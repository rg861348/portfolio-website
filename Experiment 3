#include <iostream>
using namespace std;

int main() {
    int number, x, y, marks;
    
    // 1. Find positive, negative, or zero
    cout << "Enter a number: ";
    cin >> number;
    if (number > 0)
        cout << "The number is Positive." << endl;
    else if (number < 0)
        cout << "The number is Negative." << endl;
    else
        cout << "The number is Zero." << endl;

    // 2. Find quadrant of coordinates
    cout << "\nEnter X and Y coordinates: ";
    cin >> x >> y;
    if (x > 0 && y > 0)
        cout << "Point lies in First Quadrant." << endl;
    else if (x < 0 && y > 0)
        cout << "Point lies in Second Quadrant." << endl;
    else if (x < 0 && y < 0)
        cout << "Point lies in Third Quadrant." << endl;
    else if (x > 0 && y < 0)
        cout << "Point lies in Fourth Quadrant." << endl;
    else if (x == 0 && y != 0)
        cout << "Point lies on Y axis." << endl;
    else if (x != 0 && y == 0)
        cout << "Point lies on X axis." << endl;
    else
        cout << "Point is at the Origin." << endl;

    // 3. Calculate student's grade
    cout << "\nEnter student's marks (0 - 100): ";
    cin >> marks;
    if (marks >= 90)
        cout << "Grade: A+" << endl;
    else if (marks >= 80)
        cout << "Grade: A" << endl;
    else if (marks >= 70)
        cout << "Grade: B+" << endl;
    else if (marks >= 60)
        cout << "Grade: B" << endl;
    else if (marks >= 50)
        cout << "Grade: C" << endl;
    else if (marks >= 40)
        cout << "Grade: D" << endl;
    else
        cout << "Grade: F (Fail)" << endl;

    return 0;
}
